{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "ES5",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "strict": false,
    "baseUrl": "src",
    "paths": {
      "@Common/*": ["Common/*"],
      "@Features/*":["Features/*"],
      "@App":["App/index.ts"],
      "@Store":["Main/store.ts"],
    }
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "noImplicitAny": false,
  "strictNullChecks": true,
  "include": [
    "src"
  ]
}
